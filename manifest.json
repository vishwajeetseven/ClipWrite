{
  "manifest_version": 3,
  "name": "ClipWrite",
  "version": "1.2",
  "description": "ClipWrite",

  "icons": {
    "128": "icon.png"
  },
  "action": {
    "default_icon": "icon.png"
  },
    
  "permissions": [
    "contextMenus",
    "scripting",
    "clipboardRead",
    "activeTab"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "commands": {
    "activate-writer": {
      "suggested_key": {
        "default": "Ctrl+Shift+5"
      },
      "description": "Activate ClipWrite"
    }
  }
}

